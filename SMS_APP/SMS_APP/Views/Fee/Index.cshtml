
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<FeeModel>
@{ Layout = "_Layout"; ViewBag.Title = "All Fees";}

<header class="container thead-dark card-header">
    <h2 style="font-family: 'Special Elite', cursive;"><b>Fees Details</b></h2>
    <span class="badge bg-danger float-end">
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Cashier">BACK</a>
    </span>
</header>
<br />
<a asp-action="AddFee" class="btn btn-primary">Pay Fees</a>
<a asp-action="GetFeesById" class="btn btn-primary">Generate Invoice</a>
<br />
<br />
@*<a asp-action="GetReservation" class="btn btn-sm btn-secondary">Get Reservation</a>*@

<table class="table table-secondary">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Student ID</th>
            <th>Cashier ID</th>
            <th>Payment Date</th>
            <th>Fee Amount</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.InvoiceId</td>
                <td>@r.StudentId</td>
                <td>@r.CashierId</td>
                <td>@r.PaymentDate</td>
                <td>@r.FeesAmount</td>

                <td>
                    <form asp-action="DeleteFee" method="post">
                        <input type="hidden" value="@r.InvoiceId" name="Id" />
                        <input type="image" src="https://www.freeiconspng.com/thumbs/close-icon/close-icon-30.png" height="10" width="10" />
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
