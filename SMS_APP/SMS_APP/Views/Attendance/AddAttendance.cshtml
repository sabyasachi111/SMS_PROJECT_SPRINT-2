
@{
    ViewData["Title"] = "Add Attendance";
}


@model AttendanceModel
@{ Layout = "_Layout"; ViewBag.Title = "Add Attendance";}

<header class="container thead-dark card-header">
    <h2 style="font-family: 'Special Elite', cursive;"><b>Add New Attendance</b></h2>
    <span class="badge bg-danger float-end">
        <a class="nav-link text-light" asp-area="" asp-controller="Attendance" asp-action="Index">BACK</a>
    </span>
</header>
<br />

<div class="container card-text justify-content-center" style="max-width: 36rem; margin: 0 auto" ;>
    <div>
        <div class="card-body">
            <form asp-action="AddAttendance" method="post">
                <div class="form-group">
                    <label asp-for="AttendanceId">Attendance ID : </label>
                    <input class="form-control" name="AttendanceId" />
                    <span asp-validation-for="AttendanceId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StudentId">Student ID : </label>
                    <input class="form-control" name="StudentId" />
                    <span asp-validation-for="StudentId"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AttendanceDate">Attendance Date : </label>
                    <input class="form-control" name="AttendanceDate" />
                    <span asp-validation-for="AttendanceDate"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Attended">Attended : </label>
                    <input class="form-control" name="Attended" />
                    <span asp-validation-for="Attended"></span>
                </div>
                <br />
                <div class="text-center panel-body">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

