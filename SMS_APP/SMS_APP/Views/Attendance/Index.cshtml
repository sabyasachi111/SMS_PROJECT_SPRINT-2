
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<AttendanceModel>
@{ Layout = "_Layout"; ViewBag.Title = "All Attendances";}

<header class="container thead-dark card-header">
    <h2 style="font-family: 'Special Elite', cursive;"><b>Attendance Details</b></h2>
    <span class="badge bg-danger float-end">
        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Teacher">BACK</a>
    </span>
</header>
<br />
<a asp-action="AddAttendance" class="btn btn-outline-primary">Add New Attendance</a>
@*<a asp-action="Index" class="btn btn-sm btn-secondary">Get All Attendance</a>*@
<br />
<br />
<table class="table table-secondary">
    <thead>
        <tr>
            <th>Attendance Id</th>
            <th>Student Id</th>
            <th>Attendance Date</th>
            <th>Attended</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.AttendanceId</td>
                <td>@r.StudentId</td>
                <td>@r.AttendanceDate</td>
                <td>@r.Attended</td>


                <td>
                    <a asp-action="UpdateAttendancePatch" asp-route-id="@r.AttendanceId">
                        UPDATE
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteAttendance" method="post">
                        <input type="hidden" value="@r.AttendanceId" name="Id" />
                        <input type="image" src="https://www.freeiconspng.com/thumbs/close-icon/close-icon-30.png" height="10" width="10" />
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>