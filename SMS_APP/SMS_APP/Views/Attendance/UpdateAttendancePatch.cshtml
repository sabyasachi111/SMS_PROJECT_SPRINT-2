                    <label asp-for="AttendanceDate">Attendance Date : </label>
                    <input class="form-control" asp-for="AttendanceDate" />
                    <span asp-validation-for="AttendanceDate"></span>
                </div>



                <div class="for-group">
                    <label asp-for="Attended">Attended : </label>
                    <input class="form-control" asp-for="Attended" />
                    <span asp-validation-for="Attended"></span>
                </div>
                <br />
                <div class="text-center panel-body">
                    <button type="submit" class="btn btn-primary">Update</button>
