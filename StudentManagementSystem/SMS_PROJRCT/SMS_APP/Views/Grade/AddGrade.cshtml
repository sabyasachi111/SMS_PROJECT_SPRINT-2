
@{
    ViewData["Title"] = "AddGrade";
}

<h1>AddGrade</h1>

@model GradeModel
@{ Layout = "_Layout"; ViewBag.Title = "Add a Reservation";}

<h2>Add a Grade <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddGrade" method="post">
    <div class="form-group">
        <label for="GradeId">Grade ID:</label>
        <input class="form-control" name="GradeId" />
    </div>
    <div class="form-group">
        <label for="StudentId">Student ID:</label>
        <input class="form-control" name="StudentId" />
    </div>
    <div class="form-group">
        <label for="GradeName">Grade Name:</label>
        <input class="form-control" name="GradeName" />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input class="form-control" name="Description" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Grade</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Grade ID</th>
                <th>Student ID</th>
                <th>Grade Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.GradeId</td>
                <td>@Model.StudentId</td>
                <td>@Model.GradeName</td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>
}