<h1>AddFee</h1>

@model FeeModel
@{ Layout = "_Layout"; ViewBag.Title = "Add a Fee";}

<h2>Add a Reservation <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddFee" method="post">
    <div class="form-group">
        <label asp-for="InvoiceId"></label>
        <input type="number" class="form-control" asp-for="InvoiceId" />
    </div>
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <input class="form-control" asp-for="StudentId" />
    </div>
    <div class="form-group">
        <label asp-for="CashierId"></label>
        <input class="form-control" asp-for="CashierId" />
    </div>
    <div class="form-group">
        <label asp-for="PaymentDate"></label>
        <input class="form-control" asp-for="PaymentDate" />
    </div>
    <div class="form-group">
        <label asp-for="FeesAmount"></label>
        <input class="form-control" asp-for="FeesAmount" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

