
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@model IEnumerable<FeeModel>
@{ Layout = "_Layout"; ViewBag.Title = "All Reservations";}

<h2>All Reservations</h2>
<a asp-action="AddReservation" class="btn btn-sm btn-primary">Add Reservation</a>
<a asp-action="GetReservation" class="btn btn-sm btn-secondary">Get Reservation</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>Invoice ID</th>
            <th>Student ID</th>
            <th>Cashier ID</th>
            <th>Payment Date</th>
            <th>Fee Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.InvoiceId</td>
                <td>@r.StudentId</td>
                <td>@r.CashierId</td>
                <td>@r.PaymentDate</td>
                <td>@r.FeesAmount</td>
                
                <td>
                    <form asp-action="DeleteFee" method="post">
                        <input type="hidden" value="@r.InvoiceId" name="Id" />
                        <input type="image" src="https://www.freeiconspng.com/thumbs/close-icon/close-icon-30.png" height="10" width="10" />
                    </form>


                </td>
            </tr>
        }
    </tbody>
</table>
