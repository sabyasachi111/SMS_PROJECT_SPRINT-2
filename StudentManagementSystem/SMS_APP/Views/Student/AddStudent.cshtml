<h1>AddStudent</h1>

@model StudentModel
@{ Layout = "_Layout"; ViewBag.Title = "Add a Student";}

<h2>Add a Reservation <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddStudent" method="post">
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <input type="number" class="form-control" asp-for="StudentId" />
    </div>
    <div class="form-group">
        <label asp-for="StudentName"></label>
        <input class="form-control" asp-for="StudentName" />
    </div>
    <div class="form-group">
        <label asp-for="ClassName"></label>
        <input class="form-control" asp-for="ClassName" />
    </div>
    <div class="form-group">
        <label asp-for="Dob"></label>
        <input class="form-control" asp-for="Dob" />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <input class="form-control" asp-for="Gender" />
    </div>
    <div class="form-group">
        <label asp-for="BloodGroup"></label>
        <input class="form-control" asp-for="BloodGroup" />
    </div>
    <div class="form-group">
        <label asp-for="Contact"></label>
        <input class="form-control" asp-for="Contact" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

